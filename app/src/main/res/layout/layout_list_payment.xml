<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_selected_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt_selected_quantity"
        android:text="Items"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/txt_selected_quantity"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/txt_selected_price"
        android:text="Quantity"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_selected_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/txt_selected_total"
        android:text="Price"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/txt_selected_total"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:textAlignment="textEnd"
        android:text="250.000.000"/>

</RelativeLayout>