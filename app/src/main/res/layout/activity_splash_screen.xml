<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark"/>

    <TextView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txt_app_name"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App\nName"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by"
        android:layout_above="@id/logo_esh"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primaryTextWhite"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/logo_esh"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_esh"
        android:layout_centerHorizontal="true"
        android:tint="@color/primaryTextWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        tools:ignore="UseAppTint" />


</RelativeLayout>